<% layout('/layouts/boilerplate.ejs') %>
<h1>List of All Campgrounds</h1>
<div>
  <a href="/campgrounds/new">Add a Campground</a>
  <div class="container-fluid">
    <div class="row">
      <% for(let i=0;i<allcampgrounds.length;i=i+1){%>
        <div class="col-md-6 col-lg-4 col-xl-4 col-xxl-3">
          <div class="card m-3" style="width: 18rem;">
            <!-- <img src="//allcampgrounds[j].img" class="card-img-top"> -->
            <img src="/images.jpg" class="card-img-top">
            <div class="card-body">
              <h5 class="card-title"><%= allcampgrounds[i].title%></h5>
              <p class="card-text"><%=allcampgrounds[i].description%></p>
              <a href="/campgrounds/<%= allcampgrounds[i]._id %>" class="btn btn-primary">Further Details</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
<a href="/"><h2>Home</h2></a>


